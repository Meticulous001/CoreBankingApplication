@model IEnumerable<JUCBA.Core.Models.ApplicationUser>
<head>
    <script type="text/javascript">
        function goToNewPage(count) {
            var id = $("#userId" + count).val();
            var url = document.getElementById('list'+count).value;
            if (url != 'none') {
                window.location = url + id;
            }
        }
    </script>
</head>
@{
    ViewBag.Title = "Index";
    var count = 0;
}


<h2>All Users</h2>

<p>
    @Html.ActionLink("Create New", "Create", new {}, new { @class = "btn btn-success" })
</p>
