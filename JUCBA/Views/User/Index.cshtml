                </th>
                <th>
                    @Html.DisplayName("Role")
                </th>
                <th>
                    @Html.DisplayName("Branch")
                </th>
                <th>@Html.DisplayName("Action")</th>
            </tr>
        </thead>

        <tbody>
        @foreach (var item in Model)
        {
            count++;
